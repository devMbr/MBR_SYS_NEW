@using MBR.Models
@using MBR.Web
@{
    Layout = "~/Views/Shared/_Empty_Layout.cshtml";
}
<table id="tbWashingInfo" class="table table-striped table-bordered table-hover dataTable" style="width:100%">
    <thead>
        <tr>
            <th rowspan="2">
                时间
            </th>
            <th>
                清洗类别
            </th>
            <th>
                药剂种类
            </th>
            <th>
                药剂浓度
            </th>
            <th>
                浸泡时间
            </th>
            <th>
                清洗前透水率
            </th>
            <th>
                清洗后透水率
            </th>
            <th>
                透水率恢复率
            </th>
            <th>
                单次清洗氯接触值
            </th>
            <th>
                累计氯接触值
            </th>
        </tr>
        <tr>
            <th>
            </th>
            <th>
            </th>
            <th>
                ppm
            </th>
            <th>
                h
            </th>
            <th>
                LMH/bar
            </th>
            <th>
                LMH/bar
            </th>
            <th>
                %
            </th>
            <th>
                ppm▪h
            </th>
            <th>
                ppm▪h
            </th>
        </tr>
    </thead>
</table>
@section header{
    <link rel="stylesheet" href="~/plugins/datatables/dataTables.bootstrap.css">
}
@section Scripts{
    <script type="text/javascript">
        var GetListUrl = '@Url.Action("GetList")';
        var GetMembraneUrl = '@Url.Action("GetMembraneList")';
    </script>
    <script type="text/javascript">
        $(function () {
            MES.init();

            var table = $('#tbWashingInfo').DataTable({
                "searching": false,
                "processing": true,
                "serverSide": true,
                "ajax": {
                    "url": GetListUrl,
                    "type": "POST",
                    "data": function (d) {
                        //添加额外的参数传给服务器
                        d.sort = 'BeginTime';
                        d.order = 'desc';
                        //添加膜的参数传给服务器
                        d.InfoID = $('#InfoID').val();
                    }
                },
                pageLength: 5,
                "columns": [
                    { "data": "BeginTime" },
                //{ "data": "EndTime" },
                    {"data": "WashType" },
                    { "data": "YaoJiLX" },
                    { "data": "YaoJiND" },
                    { "data": "JinPaoSJ" },
                    { "data": "TouShuiL_Low" },
                    { "data": "TouShuiL_High" },
                    { "data": "TouShuiL_HFL"
                    , "render": function (data, type, full, meta) {
                        return "1";
                    }
                    }, //透水率恢复率
                    {"data": "LvJieCZDC" },
                    { "data": "LvJieCZLJ"}  //累计氯接触值
                ]

            });

        });


    </script>
}
